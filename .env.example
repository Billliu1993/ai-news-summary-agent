# Hacker News AI Summary Agent Configuration
# Copy this file to .env and fill in your actual values

# ===================
# Required Settings
# ===================

# OpenAI Configuration (REQUIRED)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Slack Configuration (REQUIRED)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# ===================
# OpenAI Settings
# ===================

# Model to use for summarization (gpt-5-nano, gpt-5-mini, gpt-5)
OPENAI_MODEL=gpt-5-nano

# API retry and generation settings
OPENAI_MAX_RETRIES=3
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=1000

# ===================
# Topics Configuration
# ===================

# Specific topics to filter for (comma-separated)
TOPICS=AI,LLM,ML,healthcare

# Enable topic categories for broader coverage (comma-separated)
# Available: ai_ml, programming, startups, infrastructure, security, web_mobile
# TOPIC_CATEGORIES=ai_ml,programming

# Enable ALL predefined topics (overrides TOPICS if true)
# ENABLE_ALL_DEFAULT_TOPICS=false

# ===================
# Story Filtering
# ===================

# Maximum stories to fetch from HN initially
MAX_STORIES=50

# Maximum stories to include in the final summary
SUMMARY_MAX_STORIES=15

# Minimum story score to consider
FILTER_MIN_SCORE=10

# Maximum age of stories in hours (1-168)
MAX_AGE_HOURS=24.0

# ===================
# Slack Settings
# ===================

# Slack webhook timeout
SLACK_TIMEOUT=30

# Bot appearance
SLACK_USERNAME=HN Bot
SLACK_ICON_EMOJI=:newspaper:

# ===================
# Hacker News API
# ===================

# HN API settings
HN_API_BASE_URL=https://hacker-news.firebaseio.com/v0
HN_REQUEST_DELAY=0.1
HN_MAX_CONCURRENT=10
HN_TIMEOUT=30.0

# ===================
# Logging Configuration
# ===================

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Enable JSON structured logging (recommended for production)
JSON_LOGS=false

# ===================
# Runtime Configuration
# ===================

# Environment: development, staging, production
ENVIRONMENT=development

# Enable debug mode (disabled in production)
DEBUG=false

# Dry run mode (don't send notifications, just log)
DRY_RUN=false

# ===================
# Example Topic Configurations
# ===================

# Minimal setup (default)
# TOPICS=AI,programming,startups

# AI/ML focused
# TOPICS=AI,machine learning,deep learning,LLM,GPT,neural networks

# Programming focused
# TOPIC_CATEGORIES=programming,infrastructure

# Startup focused
# TOPICS=startups,venture capital,funding,IPO,business,entrepreneur

# Broad tech coverage
# ENABLE_ALL_DEFAULT_TOPICS=true